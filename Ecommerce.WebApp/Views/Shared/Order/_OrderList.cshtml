@model ICollection<Ecommerce.Models.Order>

<div class="row">
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Order No</th>
                <th> Order Date </th>
                 <th>Customer Id</th>
                <th>Action</th>
            </tr>


        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderNo</td>
                    <td>@order.OrderDate</td>
                    <td>@order.CustomerId</td>
                
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-success"><span><strong><i class="fa fa-edit"> Edit</i></strong></span></a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger" onclick="return confirm('Are you sure ,You want to delete ? Order : @order.Id')" id="Delete"><span><i class="fa fa-trash-o"><strong> Delete</strong></i></span></a>


                        @*<button class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "Customer")?Id=@customer.Id'">Edit</button> |
                            <button class="btn btn-info" onclick="location.href = '@Url.Action("Details", "Customer")?id=@customer.Id'">Details</button> |
                            <button class="btn btn-danger" onclick="location.href = '@Url.Action("Delete", "Customer")?Id=@customer.Id'">Delete</button>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>