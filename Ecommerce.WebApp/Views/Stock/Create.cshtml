@model Ecommerce.Models.RazorViewModels.Stock.StockVM
@{
    ViewData["Title"] = "Create";
}
<style>
    .breadcrumb > li + li:before {
        content: ">";
    }

    .breadcrumb > .active {
        color: #000000;
    }
</style>
<ol class="breadcrumb">
    <li><a href="~/Product/_cardView">Home</a></li>
    <li><a href="~/Product/Index">Product</a></li>
    <li><a href="~/ProductVariants/Index">ProductVariants</a></li>
    <li><a href="~/Size/Index">Size</a></li>
    <li class="active"><a href="~/Stock/Index">Stock</a></li>

</ol>
<h2>Create Stock</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Product Name:</label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.SelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



<h1>Stock List</h1>
<partial name="~/Views/Shared/Stock/_StockList.cshtml" model="Model.StockList" />



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
