        <tbody>
            @foreach (var stock in Model)
            {
            <tr class="text-center">
                <td>@stock.Id</td>
                <td>@stock.Code</td>
                <td>@stock.Name</td>
               

                <td>
                    <a asp-action="Edit" asp-route-id="@stock.Id" class="btn btn-success"><span><strong><i class="fa fa-edit"> Edit</i></strong></span></a>
                    <a asp-action="Delete" asp-route-id="@stock.Id" class="btn btn-danger" onclick="return confirm('Are you sure ,You want to delete ? Size : @stock.Name')" id="Delete"><span><i class="fa fa-trash-o"><strong> Delete</strong></i></span></a>

                </td>
            </tr>
            }
        </tbody>
