@using Ecommerce.Models.RazorViewModels.Order
@model Ecommerce.Models.RazorViewModels.Order.OrderVM


<style>
    .breadcrumb > li + li:before {
        content: ">";
    }

    .breadcrumb > .active {
        color: #000000;
    }
</style>
<ol class="breadcrumb">
    <li><a href="~/Product/_cardView">Home</a></li>
    <li><a href="~/Product/Index">Product</a></li>
    <li class="active"><a href="~/Comments/Index">Comments</a></li>
</ol>
<h1>Order Create</h1>
<form method="post">

    <div class="form-horizontal">
        @*<div class="form-group">
                <label asp-for="CustomerId" class="col-md-2">CustomerId</label>
                <div class="col-md-10">
                    <input type="text" asp-for="CustomerId" class="form-control" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
            </div>*@
        <div class="form-group">
            <label asp-for="OrderNo" class="col-md-2">OrderNo</label>
            <div class="col-md-10">
                <input type="text" asp-for="OrderNo" readonly="readonly" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderDate" class="col-md-2">OrderDate</label>
            <div class="col-md-10">
                <input type="text" asp-for="OrderDate" readonly="readonly" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="col-md-2">Phone No</label>
            <div class="col-md-10">
                <input type="text" asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShippingAddress" class="col-md-2">Shipping Address</label>
            <div class="col-md-10">
                <input type="text" asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentMethod" class="col-md-2">Payment Method</label>@*Dropdown List Binding*@
            <div class="col-md-10">
                <select asp-for="PaymentMethod" asp-items="@ViewBag.PaymentMethodSelectList" class="form-control"> </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="col-md-2">Status</label>
            <div class="col-md-10">
                <select asp-for="Status" disabled="disabled" readonly="readonly" asp-items="@ViewBag.SelectList" class="form-control"> </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

</form>




@section Scripts
 {
    @*<script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>*@
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

