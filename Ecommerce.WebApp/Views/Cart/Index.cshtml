@model ICollection< Ecommerce.Models.Item>

<h2>Your Shopping Cart</h2>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th> Price </th>
            <th> Expiry Date </th>
            <th>Category Name </th>
            <th>Quantity</th>
            <th>Sub-Total</th>
            <th>Action</th>
        </tr>


    </thead>
    <tbody>
        @foreach (var customer in ViewBag.cart)
        {
        <tr>

            <td>
                <img class="img-responsive" width="50" height="50" src="data:image/jpeg;base64,@Convert.ToBase64String(customer.product.Image)" />
            </td>
            <td>@customer.product.Name</td>
            <td>@customer.product.Price ৳</td>
            <td>@customer.product.ExpireDate</td>
            <td>@customer.product.CategoryId</td>
            <td>@customer.Quantity</td>
            <td>@(customer.product.Price * customer.Quantity)</td>
            <td align="center">
                <a asp-controller="cart" asp-action="Remove" asp-route-id="@customer.product.Id">Remove From Cart</a>
            </td>
        </tr>
        }
        <tr>
            <td colspan="5" align="right" >Total</td>
            <td>@ViewBag.Total</td>
       </tr>
    </tbody>
</table>
<br /> <br />
<a class="btn btn-success" asp-controller="Product" asp-action="_cardview">Continue Shopping</a>.